{
  "extends": "next/core-web-vitals",
  "rules": {
    // ...
    "semi": ["error", "never"],
    "indent": ["error", 2],
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
    "react-hooks/rules-of-hooks": "error", // 检查 Hook 的规则
    "react-hooks/exhaustive-deps": "warn" // 检查 effect 的依赖
  }
}
